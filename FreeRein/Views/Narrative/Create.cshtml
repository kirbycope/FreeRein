@using Microsoft.AspNet.Identity;
@model FreeRein.Models.Narrative

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Narrative</h4>
        <hr />
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.ParentID, (int)ViewBag.ParentID)
        
        @Html.HiddenFor(model => model.ParentOptionID, (int)ViewBag.ParentOptionID)
        
        @Html.HiddenFor(model => model.UserID, User.Identity.GetUserId())

        <div class="form-group">
            @Html.LabelFor(model => model.Story, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Story, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Story)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Option1, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Option1, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Option1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Option2, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Option2, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Option2)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Beginning", "Index")
</div>
